<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>WoodPecker Furniture</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous" defer></script>
    <link rel="stylesheet" href="/static/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  </head>
  <body>

      {{!-- sending the details of the nav bar to the navbar.hbs file in the partials with a const variable(data) so that we can access the object data in the navbar.hbs --}}
      {{>navbar data = details }}
       
    {{!-- <h1>Index Page</h1> --}}

  

{{!-- **************************************************************** --}}
      {{!-- banner-1 section --}}

      <section class="banner1_section py-3">

        <div class="container">
          <div class="row">
            <div class="col-md-12">
              <h2 class="text-center">WOODPECKER</h2>
              <h3 class="text-center">Furnish your home with us,Live your life in comfort.</h3>

              
            </div>
          </div>
        </div>
      </section>

{{!-- ********************************************************* --}}


      {{!-- sending the details of the slider section to the slider.hbs file in the partials with a const variable(sliderData) so that we can access the array object in the slider.hbs --}}

     {{>slider sliderData = slider}}


        

    {{!-- services section(services that we provide) --}}

    <section id="services_section" class="py-3">

      <div class="container">

        <h3 class="text-center text-secondary">Services that we provide</h3>

        <div class="row mt-5">
          {{!-- 1st service section--1st column of 4X3 grid --}}
          {{!-- looping the process and fetching the data from my database --}}
          {{#each services}}
          <div class="col-md-4">
            <div class="card">
              <div class="card-body">

                <div class="container text-center py-3">

                  <i class="{{this.icon}} services-icon"></i>
                </div>
                
                
                <h4>{{this.title}}</h4>
                
                <p>{{this.Description}}</p>

                <a href="{{this.link}}">{{this.linkText}}</a>
                
              </div>
            </div>
          </div>

          {{/each}}

        
          


        </div>


      </div>

    </section>


    {{!-- Query section --}}


    <section id="query_section" class="py-5 background-query">
    <div class="container">

      <h3 class="text-center text-secondary">Contact-Us</h3>
      <div class="row">
        <div class="col-md-12">
      
      <form action="/query" method="post">
        <div class="mb-3">
          <label for="exampleInputName1" class="form-label">Enter your name</label>
          <input name="name" type="Name" class="form-control" id="exampleInputName1" aria-describedby="NameHelp">
          
        </div>

        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Email address</label>
          <input name="email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
          
        </div>
        
        
        <div class="mb-3">
          <label for="enterContactNumberField" class="form-label">Enter Contact number</label>
          <input name="phone" type="number" class="form-control" id="enterContactNumberField">
        </div>

        {{!-- <div class="form my-3">
          <label for="queryField" >Your Query</label>
        <textarea name="query" style="height: 250px;" class="form-control" placeholder="Enter your query here" id="queryField">
          
        </textarea>
        
        </div> --}}

        <div class="form my-3">
        <label for="floatingTextarea" >Your query:</label>
        <textarea name="query" style="height:200px;" class="form-control" placeholder="Enter your query here" id="floatingTextarea"></textarea>
        
        </div>
        
        <div class="container text-center">
          <button type="submit" class="btn btn-dark">Submit</button>
        </div>

        </form>
          </div>
        </div>
      </div>

    </section>

    {{!-- About section --}}

    
    {{>about aboutData = about}}

    {{!-- Footer section --}}
    
    <footer class="footer">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="container text-center py-3">
          <span>@ 2021 copyright: <a href="">www.woodpecker.com</a></span>
          <h4 class="text-center text-dark">follow us on</h4>
          <i class="fa-brands fa-instagram footer_icons"></i>
          <i class="fa-brands fa-facebook footer_icons"></i>
          <i class="fa-brands fa-twitter footer_icons"></i>
      </div>

            </div>
          </div>
        </div>
    </footer>
    {{!-- *************************************************** --}}
    
    
    
   
   
    
  </body>
</html>